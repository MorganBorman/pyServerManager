<xml>
	<comment>Supports imports of other xml files</comment>
	<import>fd_xsbs_common.xml</import>

	<comment>supports rudimentary variables</comment>
	<property>
		<key>name</key>
		<value>pluto</value>
	</property>

	<comment>below are the tags that must be present for a specification of a server to be valid</comment>
	<name>!name!</name>
	<directory>!xsbs_root_path!</directory>
	<executable>!xsbs_bin_path!</executable>
	<autostart>True</autostart>
	<arguments>
		<arg>-a!xsbs_root_path!/fd_servers/!name!/Config/</arg>
		<arg>-s!pyscripts_path!</arg>
		<arg>-p!xsbs_root_path!/fd_servers/!name!/server-init.cfg</arg>
		<arg>-n!name!</arg>
	</arguments>
	<stdout>!xsbs_root_path!/fd_servers/!name!/!name!.out</stdout>
	<stderr>!xsbs_root_path!/fd_servers/!name!/!name!.err</stderr>
</xml>
